{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "installCommand": "pip install --upgrade pip && pip install -r requirements.txt --target .",
                "includeFiles": [
                    "services/transcriber.py",
                    "services/downloader.py"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ]
}